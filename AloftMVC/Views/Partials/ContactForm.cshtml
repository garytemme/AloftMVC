
@model AloftMVC.Models.ContactUs


@if (TempData["success"] == null)
{

using (Html.BeginUmbracoForm<AloftMVC.Controllers.ContactFormSurfaceController>("PostHandler", FormMethod.Post))

{
    @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Contact Us</h4>
            <hr />
            @Html.ValidationSummary(true, "Error in form entries", new { @class = "has-warning" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "has-warning" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-textBox" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mesasge, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Mesasge, 6, 40, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mesasge, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type = "submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}
else {
    @* TODO -  find a class to make this pretty *@ 
    <p> Thanks for contacting us. We will respond soon!</p>
}

